div.theme-bsc
    mat-progress-bar(mode="indeterminate", *ngIf="isShowProgress")
div(*ngIf="data.filtro == 'content'")
    h1(mat-dialog-title) Información del indicador
    div.theme-bsc(mat-dialog-content)
        mat-form-field
            mat-select(panelClass="cs-bsc-select", placeholder="Año", [(ngModel)]="year_selected", (change)="getSedes()")
                mat-option(*ngFor="let year of cmb_years", [value]="year.year") {{ year.year }}

        mat-form-field
            mat-select(panelClass="cs-bsc-select", placeholder="Sedes",multiple, [(ngModel)]="sedes")
                mat-option(*ngFor="let sede of cmb_sedes.list_sedes", [value]="sede.sede") {{ sede.desc_sede }}

    div.theme-bsc(mat-dialog-actions)
        button(mat-button, (click)="onNoClick()") CERRAR
        button(mat-button, [mat-dialog-close]="", (click)="enviarFiltro()", cdkFocusInitial) ACEPTAR

div(*ngIf="data.filtro == 'chart'")
    h1(mat-dialog-title) Tendencia anual
    div.theme-bsc(mat-dialog-content)
        mat-form-field
            mat-select(panelClass="cs-bsc-select", placeholder="Tipo filtro", [(ngModel)]="tip_med_sel")
                mat-option(*ngFor="let tipo of cmb_tfiltro", [value]="tipo.valor") {{ tipo.desc_combo }}

    div.theme-bsc(mat-dialog-actions)
        button(mat-button, [mat-dialog-close]="") CERRAR
        button(mat-button, [mat-dialog-close]="", cdkFocusInitial, (click)="guardarTipoMed()") ACEPTAR