h1(mat-dialog-title) Mis incidencias
    button.cs-close(mat-icon-button, (click)="onNoClick()")
            mat-icon close

div.no-padding(mat-dialog-content)
    mat-table(#table, [dataSource]="dataSource")
        ng-container(matColumnDef="date")
            mat-header-cell(*matHeaderCellDef) Fecha
            mat-cell(*matCellDef="let element") {{element.date}}

        ng-container(matColumnDef="amount")
            mat-header-cell.text-center(*matHeaderCellDef) Monto
            mat-cell.text-center(*matCellDef="let element") {{element.amount}}

        ng-container(matColumnDef="comment")
            mat-header-cell(*matHeaderCellDef)
                mat-icon comment
                span Comentario

            mat-cell(*matCellDef="let element") {{element.comment}}

        mat-header-row(*matHeaderRowDef="displayedColumns")
        mat-row(*matRowDef="let row; columns: displayedColumns;")

div(mat-dialog-actions)