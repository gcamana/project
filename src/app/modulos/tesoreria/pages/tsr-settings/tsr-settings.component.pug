.theme-treasury
    span.cs-header-title((click)="backPage()") Configuración
    //- cs-shrinking-header-component([headerHeight]="0", [offset]="mobileQuery.matches ? 45: 64")
    //-     .wrapper
    //-         span.font-size-56([class.hideTitle]="displayTitle", (click)="backPage()") Configuración

.theme-treasury
    .cs-overload([class.active]="isOpenInfo", (click)="closeAction()")
    .cs-content
        h3 Cronograma de pago
        cs-setting-table-group.mat-elevation-z2
            cs-setting-table(*ngFor="let year of ['2018', '2017', '2016', '2015']", [title]="year")
                mat-nav-list
                    mat-divider
                    mat-list-item
                        p(matLine) Lectivo
                        mat-icon.cs-mat-icon arrow_drop_down
                    mat-divider
                    mat-list-item
                        p(matLine) Verano
                        mat-icon.cs-mat-icon arrow_drop_down

        h3 Documentos de pagos
        cs-setting-table-group.mat-elevation-z2
            cs-setting-table([isInfo]="true", [title]="'Tipo de documento'")
                mat-nav-list
                    mat-divider
                    mat-list-item
                        p(matLine) Boleta
                        mat-slide-toggle
                    mat-divider
                    mat-list-item
                        p(matLine) Stickers
                        mat-slide-toggle

            cs-setting-table([isInfo]="true", [title]="'Deseas recibos'", [isToggle]="true")
                mat-nav-list
                    mat-divider
                    mat-list-item
                        p(matLine) Cuotas de cronograma
                        mat-slide-toggle
                    mat-divider
                    mat-list-item
                        p(matLine) Otros
                        mat-slide-toggle


        h3 Métodos de pago
        cs-setting-table-group.mat-elevation-z2
            cs-setting-table([title]="'Efectivo'")
                mat-nav-list
                    mat-divider
                    mat-list-item
                        p(matLine) Pago parcial
                        mat-slide-toggle( (change)="changeStatePartialPayment($event,1)" )

            cs-setting-table([title]="'Tarjeta'")
                mat-nav-list
                    mat-divider
                    mat-list-item
                        p(matLine) Visa
                        mat-slide-toggle( (change)="changeStateCreditCard($event,1)" )
                    mat-divider
                    mat-list-item
                        p(matLine ) Mastercard
                        mat-slide-toggle( (change)="changeStateCreditCard($event,2)" )
                    mat-divider
                    mat-list-item
                        p(matLine) Pago parcial
                        mat-slide-toggle( (change)="changeStatePartialPayment($event,2)", [disabled]="isPartialCard", [checked]="isCheckedPartialCard")

        h3 Descuentos
        .cs-list.mat-elevation-z2
            mat-nav-list
                mat-divider
                mat-list-item
                    p(matLine) Becas
                    mat-icon.cs-mat-icon arrow_drop_down
                mat-divider
                mat-list-item
                    p(matLine) Promociones
                    mat-icon.cs-mat-icon arrow_drop_down


        h3 Bancos
        cs-setting-table-group.mat-elevation-z2
            cs-setting-table([title]="'Empresas'")
                mat-nav-list
                    mat-divider
                    mat-list-item
                        p(matLine) Bcp
                        mat-slide-toggle
                    mat-divider
                    mat-list-item
                        p(matLine) Comercio
                        mat-slide-toggle
                    mat-divider
                    mat-list-item
                        p(matLine) Financiero
                        mat-slide-toggle

        h3 Cajas
        cs-setting-table-group.mat-elevation-z2
            cs-setting-table([title]="'Alertas'", [isToggle]="true", (toggleAction)="onToggleAction($event)")
                mat-divider
                .cs-wrapper
                    p Monto de alerta
                        mat-icon help_outline
                    mat-form-field
                        span(matPrefix) S/ &nbsp;
                        input(matInput, placeholder="Escribe el Monto", [disabled]="!activeAlert")